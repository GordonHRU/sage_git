<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical"
android:gravity="start">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="#c1ffb6"
        android:textColor="#000"
        android:fontFamily="Bahnschrift"
        android:gravity="center|bottom"
        android:padding="20dp"
        android:text="My Medicinal Herbs Detection"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/captureImageView"
        android:layout_width="match_parent"
        android:layout_height="471dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Bahnschrift"
        android:gravity="center|bottom"
        android:padding="20dp"
        android:text="Photos to be uploaded"
        android:textSize="20sp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:gravity="center|bottom"
    android:orientation="vertical" >

    <!--    Button 1 - Take photo-->
    <Button
        android:id="@+id/captureImgBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:text="Take photo"
        android:drawableLeft="@drawable/baseline_add_a_photo_24"
        android:backgroundTint="#c1ffb6"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal|center"

        />

    <!--&lt;!&ndash;    Button 2 - Scan&ndash;&gt;-->
    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:text="Scan"
        android:drawableLeft="@drawable/baseline_qr_code_scanner_24"
        android:backgroundTint="#c1ffb6"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal|center"
        />

</LinearLayout>



